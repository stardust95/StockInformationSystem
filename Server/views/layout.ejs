
<!-- Main Header -->
<header class="main-header">
    <nav class="navbar navbar-static-top">
        <div class="container">
            <div class="navbar-header">
                <a href="http://112.74.124.145:3000" class="navbar-brand"><b>Stock</b>Trade</a>
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse">
                    <i class="fa fa-bars"></i>
                </button>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse pull-left" id="navbar-collapse">
                <ul class="nav navbar-nav">
                    <li id="nav-home"><a href="/">首页</a></li>

                    <li id="nav-stock"><a href="/stock/000002">个股</a></li>
                    <li id="nav-index"><a href="/index">指数</a></li>
                </ul>
                <form class="navbar-form navbar-left" role="search" action="/stocks/search">
                    <div class="form-group">
                        <input type="text" class="form-control" name="keyword" id="navbar-search-input" placeholder="股票代码或名称">
                    </div>
                    <button class="btn bg-maroon" type="button" onclick="onSearchClick()">Go!</button>
                    <script src="https://cdn.bootcss.com/jquery/3.2.1/jquery.min.js"></script>
                    <script>
                        function onSearchClick() {
                            let str =  $('#navbar-search-input').val();
                            console.log(str)
                            if( str.length > 0 ){
                                let query = $.param({
                                    keyword: str
                                })
                                window.location.href = '/stocks/search?' + query
                            }
                        }
                    </script>

                </form>

            </div>
            <!-- /.navbar-collapse -->
            <!-- Navbar Right Menu -->
            <div class="navbar-custom-menu">
                <ul class="nav navbar-nav">
                    <!-- Messages: style can be found in dropdown.less-->
                    <li class="dropdown messages-menu">

                    <!-- User Account Menu -->
                    <% if ( username ){ %>
                        <li class="dropdown user user-menu">
                            <!-- Menu Toggle Button -->
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                <!-- The user image in the navbar-->
                                <img class="img-sm" src="http://112.74.124.145:3000/AdminLTE-2.3.11/dist/img/user2-160x160.jpg" alt="User Image">
                                <!-- hidden-xs hides the username on small devices so only the image appears. -->
                                <span class="hidden-xs"> <%= username %> </span>
                            </a>

                            <ul class="dropdown-menu">
                                <!-- The user image in the menu -->
                                <li class="user-header">
                                    <img class="img-sm" src="http://112.74.124.145:3000/AdminLTE-2.3.11/dist/img/user2-160x160.jpg" alt="User Image">

                                    <p>
                                        <%= username %>
                                        <small>for stock information system</small>
                                    </p>
                                </li>
                                <!-- Menu Body -->
                                <li class="user-body">
                                    <div class="row">
                                        <div class="col-xs-4 text-center">
                                            <a href="#">Followers</a>
                                        </div>
                                        <div class="col-xs-4 text-center">
                                            <a href="#">Sales</a>
                                        </div>
                                        <div class="col-xs-4 text-center">
                                            <a href="#">Friends</a>
                                        </div>
                                    </div>
                                    <!-- /.row -->
                                </li>
                                <!-- Menu Footer-->
                                <li class="user-footer">
                                    <div class="pull-left">
                                        <a href="http://112.74.124.145:3000/mainpage" class="btn btn-default btn-flat">证券账户</a>
                                    </div>
                                    <div class="pull-left">
                                        &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
                                    </div>
                                    <div class="pull-left">
                                        <a href="http://112.74.124.145:3001" id = "tradeaccount" class="btn btn-default btn-flat">资金账户</a>
                                    </div>

                                    <div class="pull-right">
                                        <a href="#" class="btn btn-default btn-flat" disabled="true" onclick = "clearsession()">登出</a>
                                    </div>
                                </li>
                            </ul>
                        </li>
                    <% } %>
                </ul>
            </div>
            <!-- /.navbar-custom-menu -->
        </div>
        <!-- /.container-fluid -->
    </nav>

</header>
