<body class="hold-transition skin-blue sidebar-mini">
<div class="wrapper">

    <!-- Main Header -->
    <header class="main-header">

        <!-- Logo -->
        <a href="/" class="logo">
            <!-- mini logo for sidebar mini 50x50 pixels -->
            <span class="logo-mini"><b>StockTrade</b></span>
            <!-- logo for regular state and mobile devices -->
            <span class="logo-lg"><b>StockTrade</b></span>
        </a>

        <!-- Header Navbar -->
        <nav class="navbar navbar-static-top" role="navigation">
            <!-- Sidebar toggle button-->

            <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
                <span class="sr-only">Toggle navigation</span>
            </a>
            <!-- Navbar Right Menu -->
            <div class="navbar-custom-menu">
                <ul class="nav navbar-nav">
                    <!-- Messages: style can be found in dropdown.less-->



                    <!-- Control Sidebar Toggle Button -->
                </ul>
            </div>
        </nav>
    </header>
    <!-- Left side column. contains the logo and sidebar -->
    <aside class="main-sidebar">

        <!-- sidebar: style can be found in sidebar.less -->
        <section class="sidebar">

            <!-- Sidebar user panel (optional) -->
            <div class="user-panel">
                <div class="pull-left image">
                    <img src="/AdminLTE-2.3.11/dist/img/user2-160x160.jpg" class="img-circle" alt="User Image">
                </div>
                <div class="pull-left info">
                    <p>Alexander Pierce</p>
                    <!-- Status -->
                    <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
                </div>
            </div>

            <!-- /.search form -->

            <!-- Sidebar Menu -->
            <ul class="sidebar-menu">
                <li class="header">证券账户个人中心</li>
                <!-- Optionally, you can add icons to the links -->
                <li class="active"><a href="#"><i class="fa fa-circle-o"></i> <span>基本信息</span></a></li>
                <li><a href="/orders"><i class="fa fa-circle-o"></i> <span>持有挂单</span></a></li>
                <li><a href="/userstock"><i class="fa fa-circle-o"></i> <span>持有股票</span></a></li>
                <li><a href="/traderecord"><i class="fa fa-circle-o"></i> <span>交易记录</span></a></li>
                <li><a href="/password"><i class="fa fa-circle-o"></i> <span>修改密码</span></a></li>
                <li><a href="/discard"><i class="fa fa-circle-o"></i> <span>销户申请</span></a></li>
            </ul>
            <!-- /.sidebar-menu -->
        </section>
        <!-- /.sidebar -->
    </aside>

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>
                证券账户个人中心
                <!--  <small>基本信息</small> -->
            </h1>
            <ol class="breadcrumb">
                <li><a href="#"><i class="fa fa-dashboard"></i> 个人中心</a></li>
                <li class="active">基本信息</li>
            </ol>
        </section>

        <!-- Main content -->
        <section class="content">
            <div class="box box-primary">
                <div class="box-header">
                    <h3 class="box-title">基本信息</h3>
                </div>
                <div class="box-body">
                    <div class="col-md-10">
                        <form action="/edit" method="post" class="form col-md-12" id="edit_form">

                            <table class = "table table-hover">
                                <tbody>
                                <tr>
                                    <th> 用户名 </th>
                                    <td> <%= data[0].username %> </td>
                                </tr>

                                <tr>
                                    <th> 账户类型</th>
                                    <% if (data[0].usertype == "0") {%>
                                    <td> 自然人 </td>
                                    <% }else{ %>
                                    <td> 法人 </td>
                                    <% } %>
                                </tr>
                                <tr>
                                    <th> 姓名</th>
                                    <td style = "padding:0px 0px;"> <input type="text" class="form-control" id="name" name="name" placeholder="请输入您的姓名" value = "<%= data[0].name %>"> </td>
                                    <!-- <td> <%= data[0].name %> </td> -->
                                </tr>
                                <tr>
                                    <th> 性别</th>
                                    <td> <div id="gender">
                                            <label class="radio-inline" style="color: rgba(153,153,153,1)" >
                                                <input type="radio" id="male" value="0" name="gender" checked> 男
                                            </label>
                                            <label class="radio-inline" style="color: rgba(153,153,153,1)">
                                                <input type="radio" id="female" value="1" name="gender"> 女
                                            </label>
                                        </div> </td>
                                </tr>
                                <tr>
                                    <th> 身份证号</th>
                                    <td> <%= data[0].id_card %> </td>
                                </tr>
                                <tr>
                                    <th> 联系电话</th>
                                    <td style = "padding:0px 0px;"> <input type="text" class="form-control" id="name" name="phone" placeholder="请输入您的姓名" value = "<%= data[0].phone %>"> </td>
                                </tr>

                                <% if (data[0].usertype == "0") {%>
                                <tr>
                                    <th> 邮箱</th>
                                    <td style = "padding:0px 0px;"> <input type="text" class="form-control" id="email" name="email"  placeholder="请输入邮箱" value = "<%= data[0].email %>" title="邮箱正确格式：xxx@xxx.com"> </td>
                                </tr>
                                <tr>
                                    <th> 地址</th>
                                    <td style = "padding:0px 0px;"> <input type="text" class="form-control" id="address" name="address" placeholder="请输入您的地址" value = "<%= data[0].address %>"> </td>
                                </tr>
                                <tr>
                                    <th> 职业</th>
                                    <td style = "padding:0px 0px;"> <input type="text" class="form-control" id="occupation" name="occupation" placeholder="请输入您的职业" value = "<%= data[0].occupation %>"> </td>
                                </tr>
                                <tr>
                                    <th> 教育水平</th>
                                    <td style = "padding:0px 0px;"> <select required id="education" name="education" class="form-control" oninvalid="setCustomValidity('*请选择您的学历')" oninput="setCustomValidity('')" style="color: rgba(153,153,153,1)" >
                                            <option value="小学">小学</option>
                                            <option value="初中">初中</option>
                                            <option value="高中">高中</option>
                                            <option value="中专">中专</option>
                                            <option value="专科">专科</option>
                                            <option value="本科">本科</option>
                                            <option value="硕士">硕士</option>
                                            <option value="博士">博士</option>
                                        </select> </td>
                                </tr>
                                <tr>
                                    <th> 工作地址</th>
                                    <td style = "padding:0px 0px;">  <input type="text" class="form-control" id="workplace" name="workplace" placeholder="请输入工作地点" value = "<%= data[0].workplace %>"> </td>
                                </tr>

                                <% } else{%>
                                <tr>
                                    <th> 营业执照</th>
                                    <td style = "padding:0px 0px;"> <input type="text" class="form-control input" id="business_license" name="business_license" placeholder="请输入营业执照" value = "<%= data[0].business_license %>"> </td>
                                </tr>
                                <tr>
                                    <th> 经理姓名</th>
                                    <td style = "padding:0px 0px;"> <input type="text" class="form-control" id="manager_name" name="manager_name" placeholder="请输入公司经理姓名" value = "<%= data[0].manager_name %>"> </td>
                                </tr>
                                <tr>
                                    <th> 经理身份证号</th>
                                    <td style = "padding:0px 0px;"> <input type="text" class="form-control" id="manager_id_card" name="manager_id_card" placeholder="请输入公司身份证号" value = "<%= data[0].manager_id_card %>"> </td>
                                </tr>
                                <tr>
                                    <th> 经理联系电话</th>
                                    <td style = "padding:0px 0px;"> <input type="text" class="form-control" id="manager_phone" name="manager_phone" placeholder="请输入公司经理联系电话" value = "<%= data[0].manager_phone %>"> </td>
                                </tr>
                                <% }%>
                                </tbody>
                            </table>
                            <div class="col-md-6 form-group">
                                <button type="submit" class="btn btn-primary" id="edit_btn">提交</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <!-- Your Page Content Here -->

        </section>
        <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->

    <!-- Main Footer -->

    <!-- Control Sidebar -->
    <aside class="control-sidebar control-sidebar-dark">
        <!-- Create the tabs -->
        <ul class="nav nav-tabs nav-justified control-sidebar-tabs">
            <li class="active"><a href="#control-sidebar-home-tab" data-toggle="tab"><i class="fa fa-home"></i></a></li>
            <li><a href="#control-sidebar-settings-tab" data-toggle="tab"><i class="fa fa-gears"></i></a></li>
        </ul>
        <!-- Tab panes -->
        <div class="tab-content">
            <!-- Home tab content -->
            <div class="tab-pane active" id="control-sidebar-home-tab">
                <h3 class="control-sidebar-heading">Recent Activity</h3>
                <ul class="control-sidebar-menu">
                    <li>
                        <a href="javascript:;">
                            <i class="menu-icon fa fa-birthday-cake bg-red"></i>

                            <div class="menu-info">
                                <h4 class="control-sidebar-subheading">Langdon's Birthday</h4>

                                <p>Will be 23 on April 24th</p>
                            </div>
                        </a>
                    </li>
                </ul>
                <!-- /.control-sidebar-menu -->

                <h3 class="control-sidebar-heading">Tasks Progress</h3>
                <ul class="control-sidebar-menu">
                    <li>
                        <a href="javascript:;">
                            <h4 class="control-sidebar-subheading">
                                Custom Template Design
                                <span class="pull-right-container">
                  <span class="label label-danger pull-right">70%</span>
                </span>
                            </h4>

                            <div class="progress progress-xxs">
                                <div class="progress-bar progress-bar-danger" style="width: 70%"></div>
                            </div>
                        </a>
                    </li>
                </ul>
                <!-- /.control-sidebar-menu -->

            </div>
            <!-- /.tab-pane -->
            <!-- Stats tab content -->
            <div class="tab-pane" id="control-sidebar-stats-tab">Stats Tab Content</div>
            <!-- /.tab-pane -->
            <!-- Settings tab content -->
            <div class="tab-pane" id="control-sidebar-settings-tab">
                <form method="post">
                    <h3 class="control-sidebar-heading">General Settings</h3>

                    <div class="form-group">
                        <label class="control-sidebar-subheading">
                            Report panel usage
                            <input type="checkbox" class="pull-right" checked>
                        </label>

                        <p>
                            Some information about this general settings option
                        </p>
                    </div>
                    <!-- /.form-group -->
                </form>
            </div>
            <!-- /.tab-pane -->
        </div>
    </aside>
    <!-- /.control-sidebar -->
    <!-- Add the sidebar's background. This div must be placed
         immediately after the control sidebar -->
    <div class="control-sidebar-bg"></div>
</div>
<!-- ./wrapper -->
<style type="text/css">
    #edit_form label.error {
        color: Red;
    }
</style>
